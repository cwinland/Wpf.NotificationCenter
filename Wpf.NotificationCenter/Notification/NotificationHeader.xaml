<UserControl x:Class="Wpf.NotificationCenter.Notification.NotificationHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:notification="clr-namespace:Wpf.NotificationCenter.Notification"
             d:DataContext="{d:DesignInstance Type=notification:Notification}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ToolTip="{Binding NotificationType}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <materialDesign:PackIcon Grid.Column="0"
            VerticalAlignment="Center"
            Kind="BellAlert" />
        <Label Grid.Column="1">
            <TextBlock FontWeight="{Binding TitleWeight, RelativeSource={RelativeSource AncestorType={x:Type notification:Notification}}}"
                       TextWrapping="Wrap" Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type notification:Notification}}}" />
        </Label>
        <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 -57 0">
            <materialDesign:PackIcon  Kind="RemoveBold" Foreground="Red"  />
        </Button>
    </Grid>
</UserControl>
