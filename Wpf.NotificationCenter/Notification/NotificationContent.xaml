<UserControl x:Class="Wpf.NotificationCenter.Notification.NotificationContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:notification="clr-namespace:Wpf.NotificationCenter.Notification"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Label Margin="5 0">
        <Label.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
        </Label.Resources>
        <TextBlock TextWrapping="Wrap" Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type notification:Notification}}}" />
    </Label>
</UserControl>
